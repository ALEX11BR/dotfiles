#
# wm independent hotkeys
#

# terminal emulator
super + Return
	$TERMINAL

# open default file manager
super + e
	xdg-open ~

# program launcher
super + d
	rofi -show drun -show-icons
super + r
	gmrun

# emoji insert
super + period
	rofimoji

# task manager
ctrl + shift + Escape
	$TERMINAL -e htop

# screenshot
Print
	maim ~/Pictures/$(date +%s).png && notify-send 'Screenshot saved!'

# volume +
XF86AudioRaiseVolume
	pactl -- set-sink-volume 0 +5%

# volume -
XF86AudioLowerVolume
	pactl -- set-sink-volume 0 -5%
# mute
XF86AudioMute
	pactl set-sink-mute 0 toggle

# play button
XF86AudioPlay
	playerctl play-pause

# next button
XF86AudioNext
	playerctl next

# previous button
XF86AudioPrev
	playerctl previous

# stop button
XF86AudioStop
	playerctl stop

# brightness +
XF86MonBrightnessUp
	xbacklight -inc 5

# brightness -
XF86MonBrightnessDown
	xbacklight -dec 5

# make sxhkd reload its configuration files:
super + alt + s
	pkill -USR1 -x sxhkd
